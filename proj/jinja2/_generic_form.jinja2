{{ form.media }}
{{ csrf_input }}
<div class="mt-3">
  {% for hidden_field in form.hidden_fields() %}
    {{ hidden_field.errors }}
    {{ hidden_field }}
  {% endfor %}
  {% for field in form.visible_fields() %}
    {% if field.errors %}<div class="alert alert-danger">{{ field.errors }}</div>{% endif %}
    <label class="row mb-3">
      <div class="col-sm-3 col-form-label">
        <div>
          <strong>
            {% if field.field.required %}<span class="text-danger">*</span>{% endif %}
            {{ field.label_tag() }}
          </strong>
        </div>
        {% if field.help_text %}<div class="transparent-text">{{ field.help_text }}</div>{% endif %}
      </div>
      <div class="col-sm-9">{{ field }}</div>
    </label>
  {% endfor %}
</div>
